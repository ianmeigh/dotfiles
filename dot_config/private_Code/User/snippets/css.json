{
	// Place your snippets for css here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"@med": {
		"prefix": "@med",
		"body": [
			"@media only screen and (max-width: $1) {\n\t$2{\n\t\t$3\n\t}\n}",
		],
		"description": "Add media query. Use Tab key 3 times (1st = max-width, 2nd = selector, 3rd = properties)"
	},
	"@bbox": {
		"prefix": "@bbox",
		"body": [
			"html {\n\tbox-sizing: border-box;\n}\n\n*, *:before, *:after {\n\tbox-sizing: inherit;\n}",
		],
		"description": "Add Universal Box Sizing with Inheritance - https://css-tricks.com/box-sizing/#universal-box-sizing-with-inheritance"
	}
}
